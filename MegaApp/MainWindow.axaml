<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mega="clr-namespace:CG.Web.MegaApiClient;assembly=MegaApiClient"
        x:Class="MegaApp.MainWindow" Title="MEGA Manager" 
        Width="700" Height="550" WindowStartupLocation="CenterScreen" Background="#0c0c0c">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top" Spacing="10" Margin="0,0,0,15">
            <Grid ColumnDefinitions="*, Auto, Auto">
                <TextBlock Text="Fájlok" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="Frissítés" Click="OnRefresh" Margin="0,0,10,0" Background="#222" Width="90"/>
                <Button Grid.Column="2" Content="Kilépés" Click="OnLogout" Background="#422" Foreground="#f88" Width="90"/>
            </Grid>
            <ProgressBar x:Name="PBar" Height="8" CornerRadius="4" Foreground="#cc0000" Background="#111"/>
            <TextBlock x:Name="Status" FontSize="11" Foreground="#555" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="15" Margin="0,15,0,0" HorizontalAlignment="Center">
            <Button Content="Feltöltés" Click="OnUp" Width="150" Height="42" Background="#1e4620" FontWeight="Bold"/>
            <Button Content="Letöltés" Click="OnDown" Width="150" Height="42" Background="#1a3a5a" FontWeight="Bold"/>
        </StackPanel>
        <Border CornerRadius="12" Background="#161616">
            <ListBox x:Name="FileList" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="mega:INode">
                        <Grid ColumnDefinitions="30, *, Auto" Margin="5">
                            <PathIcon Data="M13,9V3.5L18.5,9M6,2C4.89,2 4,2.89 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2H6Z" Width="16"/>
                            <TextBlock Grid.Column="1" Text="{Binding Name}" Margin="10,0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding Size}" Foreground="#444" FontSize="10" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </DockPanel>
</Window>
